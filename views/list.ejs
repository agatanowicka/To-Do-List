<html lang = "en" dir = "ltr">
<head>
    <meta charset = "utf-8">
    <title>To-Do List</title>
    <script src = "https://kit.fontawesome.com/cf87eef876.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" type="image/x-icon" href="icon/favicon.ico" />
</head>
<body>
    <link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity = "sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin = "anonymous">
    <script src = "https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity = "sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin = "anonymous"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity = "sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin = "anonymous"></script>
    <script src = "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity = "sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin = "anonymous"></script>
    <link rel = "stylesheet" href = "css/toDo.css">

    <div class = "conteiner allElements">
        <div class = "conteiner date">
            <h1> <%= day %> </h1>
        </div>
        <div class = "conteiner list">

            <% for(var i = 0; i < taskList.length; i++){ %>
                <div class = "conteiner task position">
                    <button type = "button" class = "btn btn-outline-light btn-sm deleteButton" onclick = "sendDelete('<%= taskList[i].name %>')">
                        <i class = "fas fa-trash fa-1.8x"></i>
                    </button>
                    <label class = "container checkboxPlusTask position">
                        <input class = "checkbox" type = "checkbox" onclick = "send('<%= taskList[i].name %>')" id = <%= i %>
                            <% if(taskList[i].isDone === true) { %> <%= checked = "checked" %> <% } %>>
                                <p> <%= taskList[i].name %> </p>
                        <span class = "checkmark"></span>
                    </label>
                </div>
            <% } %>
            <form class = "newItem" action = "/" method = "POST" autocomplete = "off">
                <input type = "text" name = "newItem" placeholder = "New item">
                <button type = "submit button" class = "btn btn-dark addButton" name = "button">+</button>
            </form>
        </div>
    </div>
    <script>
        const send = function (taskName) {
            const http = new XMLHttpRequest();
            const url = '/' + taskName;
            http.open("GET", url);
            http.send();
        };
        const sendDelete = function (taskName) {
            const http = new XMLHttpRequest();
            const url = '/' + taskName;
            http.open("DELETE", url);
            http.send();
            window.location.reload(true);
        };
    </script>
</body>
</html>